#!/bin/zsh

echo "## Stats"
echo "\r"
echo "Files: `find . -type f -name "*.md" | wc -l`"
echo "Lines: `find . -type f -name "*.md" | xargs cat | wc -l`"
echo "\r"
echo "## Todo: \r\n`find . -type f -name "*.md" | xargs cat | grep "@todo"`"
echo "\r"
echo "## Links: \r\n`find . -type f -name "*.md" | xargs cat | grep -Eo '(http|https)://[^/"]+' | sort | uniq`"
