[colors]
background = #0000
primary = #FFF
invert = #000
background-alt = #FFF
background-urgent = #5F00
foreground-alt = #EEEE

[bar/configure]
enable-ipc = true
font-0 = Lekton Nerd Font:pixelsize=0:antialias=true:autohint=true
dpi = 192
background = ${colors.background}

[bar/workspaces]
inherit = bar/configure
bottom = true
height = 40
padding = 3
module-margin-right = 2
modules-left = i3
modules-center = xwindow
modules-right = timer spotify previous playpause next info-docker onscreen github temperature alsa cpu memory filesystem xkeyboard network battery date

tray-position = right
tray-padding-left = 4
tray-maxsize = 28
tray-background = ${colors.background}

[module/onscreen]
type=custom/text
click-left= dbus-send --type=method_call --print-reply --dest=org.onboard.Onboard /org/onboard/Onboard/Keyboard org.onboard.Onboard.Keyboard.ToggleVisible
content =  

[module/timer]
type=custom/script
exec=~/.dotfiles/bin/active_task
interval = 1
label=%output%
label-foreground = ${colors.invert}
label-background = ${colors.background-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-focused = %index%
label-focused-foreground = ${colors.invert}
label-focused-background = ${colors.background-alt}
label-focused-padding = 1
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-visible = %index%
label-urgent = %index%
label-urgent-background = ${colors.background-urgent}

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/xwindow2]
type = internal/xwindow
label =

[module/github]
type = internal/github
token = ${env:GITHUB_ACCESS_TOKEN}
