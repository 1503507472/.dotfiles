#!/bin/bash

export DOTFILES=$HOME/.dotfiles

ln -s $DOTFILES/.emotions    $HOME/.emotions
ln -s $DOTFILES/.gitconfig   $HOME/.gitconfig
ln -s $DOTFILES/.gitignore   $HOME/.gitignore
ln -s $DOTFILES/.irssi       $HOME/.irssi
ln -s $DOTFILES/.jshintrc    $HOME/.jshintrc
ln -s $DOTFILES/.npmrc       $HOME/.npmrc
ln -s $DOTFILES/.ackrc       $HOME/.ackrc
ln -s $DOTFILES/.search      $HOME/.search
ln -s $DOTFILES/.tmux.conf   $HOME/.tmux.conf
ln -s $DOTFILES/.tmuxinator  $HOME/.tmuxinator
ln -s $DOTFILES/.vimrc       $HOME/.vimrc
mkdir -p $HOME/.config/nvim
ln -s $DOTFILES/.nvimrc      $HOME/.config/nvim/init.vim
ln -s $DOTFILES/.zshrc       $HOME/.zshrc
