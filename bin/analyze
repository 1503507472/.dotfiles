#!/bin/bash

echo "# LINT"
echo ""

eslint ./src/**/*{ts,tsx}

echo ""
echo ""

echo "# TODO"
echo ""

grep -rn TODO ./src
grep -rn FIXME ./src

echo ""
echo ""

echo "# ANY, UNKNOWN, @ts-ignore"
echo ""

grep -rn unknown ./src
grep -rn any ./src
grep -rn ts-ignore ./src

echo ""
echo ""

echo "# DUPLICATIONS"
echo ""

jscpd ./src

echo ""
echo ""

echo "# GIT"
echo ""

echo "commits: $(git-count)"

echo "# GIT-EFFORT"

# TODO: grep for '\33[H\33[2J' to prevent screen to be cleared
EFFORT=$(git-effort --above 20)
printf "$EFFORT"

echo ""
echo ""
