#!/bin/bash
CURRENT_TASK=$(/usr/bin/task active 2>&1 | head -n 4 | tail -n 1 | sed 's/\s\+/ /g')

if [[ $CURRENT_TASK == 'No matches.' ]]; then
  echo ''
else
  TASK_NAME=`echo $CURRENT_TASK | cut -d ' ' -f 5-`
  TASK_TIME=`echo $CURRENT_TASK | awk -F ' ' '{print $3}'`
  echo -e " $TASK_NAME: $TASK_TIME "
fi

exit 0
