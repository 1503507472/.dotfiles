#! /usr/bin/env bash

HEX=`echo $1`
LENGTH=`echo $1 | wc -c`

if (( $LENGTH==5 )); then
    RED=`echo "${HEX:1:1}${HEX:1:1}"`
    GREEN=`echo "${HEX:2:1}${HEX:2:1}"`
    BLUE=`echo "${HEX:3:1}${HEX:3:1}"`
fi
if (( $LENGTH==8 )); then
    RED=${HEX:1:2}
    GREEN=${HEX:3:2}
    BLUE=${HEX:5:2}
fi

printf "\033]6;1;bg;red;brightness;%d\a" "0x$RED"
printf "\033]6;1;bg;green;brightness;%d\a" "0x$GREEN"
printf "\033]6;1;bg;blue;brightness;%d\a" "0x$BLUE"
